<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/llDay"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvWeek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size_week"
    android:textStyle="italic|bold"
    android:typeface="monospace"
    android:visibility="gone" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvDay"
    android:layout_width="@dimen/days_listview_item_tvDay_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvDay_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvStart"
    android:layout_width="@dimen/days_listview_item_tvStart_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvStart_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvEnd"
    android:layout_width="@dimen/days_listview_item_tvEnd_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvEnd_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvPause"
    android:layout_width="@dimen/days_listview_item_tvPause_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvPause_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvTotal"
    android:layout_width="@dimen/days_listview_item_tvTotal_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvTotal_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvOver"
    android:layout_width="@dimen/days_listview_item_tvOver_layout_width"
    android:layout_height="wrap_content"
    android:layout_weight="@dimen/days_listview_item_tvOver_layout_weight"
    android:gravity="center"
    android:textSize="@dimen/main_list_text_size"
    android:typeface="monospace" />
</LinearLayout>