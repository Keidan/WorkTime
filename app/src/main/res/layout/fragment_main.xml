<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/content"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:animateLayoutChanges="true">


  <LinearLayout
    android:id="@+id/llTitle"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/fragment_main_llTitle_paddingBottom">

    <ImageButton
      android:contentDescription="@null"
      android:src="@mipmap/ic_previous"
      android:layout_width="@dimen/fragment_main_btPreviousMonth_layout_width"
      android:layout_height="match_parent"
      android:id="@+id/btPreviousMonth" />

    <LinearLayout
      android:id="@+id/llYearMonth"
      android:orientation="horizontal"
      android:layout_width="@dimen/fragment_main_llYearMonth_layout_width"
      android:layout_height="wrap_content"
      android:layout_weight="@dimen/fragment_main_llYearMonth_layout_weight"
      tools:ignore="InefficientWeight">

      <TextView
        android:text="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMonth"
        android:layout_weight="@dimen/fragment_main_tvMonth_layout_weight"
        android:layout_marginBottom="@dimen/fragment_main_tvMonth_layout_marginBottom"
        tools:ignore="NestedWeights" />

      <TextView
        android:text="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYear"
        android:textSize="@dimen/fragment_main_tvYear_textSize"
        android:layout_weight="@dimen/fragment_main_tvYear_layout_weight" />
    </LinearLayout>

    <ImageButton
      android:contentDescription="@null"
      android:src="@mipmap/ic_next"
      android:layout_width="@dimen/fragment_main_btNextMonth_layout_width"
      android:layout_height="match_parent"
      android:id="@+id/btNextMonth" />
  </LinearLayout>

  <RelativeLayout
    android:id="@+id/rlDetails"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/llTitle"
    android:layout_alignParentStart="true">

    <ImageView
      android:id="@+id/ic_public_holidays"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:layout_alignParentStart="true"
      android:layout_width="@dimen/fragment_main_ic_public_holidays_layout_width"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_public_holidays" />

    <LinearLayout
      android:id="@+id/ll_sub_details"
      android:orientation="vertical"
      android:layout_toEndOf="@+id/ic_public_holidays"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:text="@string/work_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvWorkDays"
        android:layout_weight="@dimen/fragment_main_tvWorkDays_layout_weight" />

      <TextView
        android:text="@string/monthly_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMonthlyHours"
        android:layout_weight="@dimen/fragment_main_tvMonthlyHours_layout_weight" />
    </LinearLayout>

    <ImageView
      android:id="@+id/ivExpand"
      android:layout_alignParentEnd="true"
      android:contentDescription="@null"
      android:layout_width="@dimen/fragment_main_ivExpand_layout_width"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_expand" />
  </RelativeLayout>


  <LinearLayout
    android:id="@+id/llHeader"
    android:layout_marginTop="@dimen/fragment_main_llHeader_layout_marginTop"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_main_llHeader_layout_height"
    android:layout_below="@+id/rlDetails"
    android:background="@color/fragment_main_llHeader"
    android:layout_alignParentStart="true">

    <ImageView
      android:id="@+id/ivSun"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivSun_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivSun_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivSun_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_sun"
      android:layout_weight="@dimen/fragment_main_ivSun_layout_weight" />

    <ImageView
      android:id="@+id/ivDown"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivDown_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivDown_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivDown_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_down"
      android:layout_weight="@dimen/fragment_main_ivDown_layout_weight" />

    <ImageView
      android:id="@+id/ivUp"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivUp_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivUp_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivUp_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_up"
      android:layout_weight="@dimen/fragment_main_ivUp_layout_weight" />

    <ImageView
      android:id="@+id/ivLunch"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivLunch_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivLunch_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivLunch_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_lunch"
      android:layout_weight="@dimen/fragment_main_ivLunch_layout_weight" />

    <ImageView
      android:id="@+id/ivClockWhite"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivClockWhite_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivClockWhite_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivClockWhite_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_clock_white"
      android:layout_weight="@dimen/fragment_main_ivClockWhite_layout_weight" />

    <ImageView
      android:id="@+id/ivClockRed"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/fragment_main_ivClockRed_layout_marginBottom"
      android:layout_marginTop="@dimen/fragment_main_ivClockRed_layout_marginTop"
      android:layout_width="@dimen/fragment_main_ivClockRed_layout_width"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_clock_red"
      android:layout_weight="@dimen/fragment_main_ivClockRed_layout_weight" />
  </LinearLayout>

  <ListView
    android:id="@+id/days"
    android:layout_below="@+id/llHeader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />

</RelativeLayout>
